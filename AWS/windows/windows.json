{
  "_comment": "Build with `packer build windows2016.json`",
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `aws_region` }}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{ user `ami_filter` }}",
          "root-device-type": "ebs"
        },
        "owners": [
          "883373499178",
          "540082622920"
        ],
        "most_recent": true
      },
      "ami_users": [
        "883373499178",
        "540082622920"
      ],
      "instance_type": "t2.xlarge",
      "enable_t2_unlimited": true,
      "user_data_file": "AWS/windows/scripts/SetUpWinRM.ps1",
      "communicator": "winrm",
      "winrm_username": "Administrator",
      "winrm_use_ssl": true,
      "winrm_insecure": true,
      "ami_name": "{{ user `ami_name` }}/{{ user `salt_branch`}}/{{timestamp}}",
      "run_tags": {
        "Name": "Packer Windows 2016 Builder"
      }
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "inline": [
        "C:/ProgramData/Amazon/EC2-Windows/Launch/Scripts/InitializeInstance.ps1 -Schedule",
        "C:/ProgramData/Amazon/EC2-Windows/Launch/Scripts/SysprepInstance.ps1 -NoShutdown"
      ]
    },
    {
      "type": "shell-local",
      "script": "AWS/.scripts/clone-salt-jenkins.sh",
      "environment_vars": [
        "SALT_BRANCH={{ user `salt_branch` }}",
        "PY_VERSION=3"
      ]
    },
    {
      "type": "salt-masterless",
      "local_state_tree": ".tmp/states",
      "local_pillar_roots": ".tmp/pillar",
      "custom_state": "git.minimal"
    }
  ]
}
