{
  "_comment": "Build with `packer build fedora.json`",
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `aws_region` }}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{ user `ami_filter` }}",
          "root-device-type": "ebs"
        },
        "owners": [
          "883373499178",
          "540082622920"
        ],
        "most_recent": true
      },
      "instance_type": "t2.large",
      "enable_t2_unlimited": "True",
      "ssh_username": "{{ user `ssh_username` }}",
      "ami_name": "{{ user `ami_name` }}/{{ user `salt_branch`}}/{{timestamp}}",
      "ami_users": [
        "883373499178",
        "540082622920"
      ],
      "run_tags": {
        "Name": "Packer Fedora Builder"
      },
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 20,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "script": "AWS/.scripts/clone-salt-jenkins.sh",
      "environment_vars": [
        "SALT_BRANCH={{ user `salt_branch` }}",
        "PY_VERSION=3"
      ]
    },
    {
      "type": "salt-masterless",
      "local_state_tree": ".tmp/states",
      "local_pillar_roots": ".tmp/pillar",
      "custom_state": "git.minimal"
    },
    {
      "type": "shell-local",
      "script": "AWS/.scripts/clone-salt-jenkins.sh",
      "environment_vars": [
        "SALT_BRANCH={{ user `salt_branch` }}",
        "PY_VERSION=2"
      ]
    },
    {
      "type": "salt-masterless",
      "local_state_tree": ".tmp/states",
      "local_pillar_roots": ".tmp/pillar",
      "custom_state": "git.minimal"
    }
  ]
}
